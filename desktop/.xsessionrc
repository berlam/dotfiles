#!/bin/sh
[ -r ~/.profile ] && . ~/.profile
[ -r ~/.Xresources ] && xrdb -merge ~/.Xresources
[ -r ~/.Xmodmap ] && xmodmap ~/.Xmodmap
#Disable touchpad
[ -x /usr/bin/synclient ] && synclient touchpadoff=1
#Start network manager applet
[ -x /usr/bin/nm-applet ] && nm-applet&
#Start power manager
[ -x /usr/bin/xfce4-power-manager ] && xfce4-power-manager&
#Start compton
[ -x /usr/bin/compton ] && compton&
#Start unclutter
[ -x /usr/bin/unclutter ] && unclutter -root -idle 30 -notclass awesome&
#Start autostart applications
[ -x /usr/bin/exo-open ] && exo-open "${XDG_CONFIG_HOME:-"$HOME/.config"}"/autostart/*
#Start awesome
#[ -x /usr/bin/awesome ] && exec awesome
